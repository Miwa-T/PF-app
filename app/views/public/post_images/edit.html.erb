<!--投稿編集画面-->
<div class="container py-5">
  <div class="row col-7 mx-auto">
    <div class="col">
      <h5>Edit MyPost</h5>
    </div>
  </div>
  <div class="row col-7 mx-auto py-3">
    <div class="col">
      <%= form_with model: @post_image, local: true do |f| %>
      <%= render "layouts/error", model: f.object %>
        <div class="form-group row justify-content-center">
          <div class="col-5">
            <%= f.label :'画像' %>
          </div>
          <div class="col-7">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-5">
            <%= f.label :'タイトル' %>
          </div>
          <div class="col-7">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-5">
            <%= f.label :'投稿内容' %>
          </div>
          <div class="col-7">
            <%= f.text_area :explain, rows:'5', class: "form-control" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-5">
            <%= f.label :'タグ' %>
          </div>
          <div class="col-7">
            <%= f.text_field :caption, class: "form-control" %>
          </div>
        </div>
        <!--保存後は詳細画面に遷移-->
        <div class="action row justify-content-center py-3">
          <%= f.submit '変更を保存する', class: "btn btn-info col-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>