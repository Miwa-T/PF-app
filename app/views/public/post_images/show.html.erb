<!--投稿詳細画面-->
<div class="container py-5">
  <div class="row col-10 mx-auto">
    <div class="col text-right my-auto">
       <% if @post_image.user == current_user %>
         <%= link_to edit_post_image_path(@post_image.id), class: "btn btn-outline-dark mx-3" do %>
           <span><i class="fas fa-edit"></i></span>
         <% end %>
         <%= link_to post_image_path(@post_image.id), method: :delete, class: "btn btn-outline-dark mx-3", data: { confirm: "本当に削除しますか？" } do %>
          <span><i class="fas fa-trash-alt"></i></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row col-10 mx-auto">
    <div class="col">
      <%= attachment_image_tag @post_image.user, :profile_image,:fill, 70,70, class: "rounded-circle" %>
      <%= link_to user_path(@post_image.user.id), class: "mx-3" do %>
        <%= @post_image.user.account_name %>
      <% end %>
    </div>
  </div>
    <!--画面左半分-->
    <div class="row col-10 mx-auto">
      <div class="col-7">
        <%= attachment_image_tag @post_image, :image,:fill, 450,450, class: "rounded" %>
        <div id="post_image_<%= @post_image.id %>">
          <%= render "public/favorites/favorite", post_image: @post_image %>
        </div>
        <%= render_with_tags(@post_image.caption) %>
      </div>
      <!--画面右半分-->
      <div class="col-5">
        <div class="row">
          <div class="col-12">
            <div class="card" style="height: 450px;">
              <div class="card-body">
                <h5 class="card-title text-center"><%= @post_image.title %></h5>
                <p class="card-text text-center py-3"><%= @post_image.explain %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
      <!--コメント表示-->
      <div class="row col-10 mx-auto py-3">
        <div class="col-8">
          <div class="comment-table_<%= @post_image.id %>">
            <%= render "public/comments/comment", post_image: @post_image %>
          </div>
        </div>
      </div>
      <div class="row col-10 mx-auto py-3">
        <div class="col-9">
          <div class="new-comment">
            <%= form_with(model: [@post_image, @comment], remote: true) do |f| %>
            <%= f.text_area :comment, rows:'3', class: "form-control" %>
          </div>
        </div>
          <div class="col-3">
            <%= f.submit 'コメントを投稿する', class: "btn btn-info" %>
            <% end %>
        </div>
      </div>
</div>