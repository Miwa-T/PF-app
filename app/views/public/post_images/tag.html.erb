<!--タグ詳細-->
<div class="container py-5">
  <div class="row col-10 col-md-6 mx-auto py-3">
    <div class="col-10 col-lg-6 mx-auto">
      <h5 class="text-center">#<%= @hashtag.tag_name %></h5>
    </div>
  </div>
  <div class="row mx-auto py-2">
    <% @post_images.each do |post_image| %>
    <div class="col-12 col-md-6 col-lg-4 py-2">
      <div>
        <%= attachment_image_tag post_image.user, :profile_image,:fill, 60,60, fallback: "img/no-image5.jpg", size: '60x60', class: "rounded-circle" %>
        <%= link_to user_path(post_image.user.id) do %>
          <%= post_image.user.account_name %>
        <% end %>
      </div>
      <div class="zoomIn">
        <%= link_to post_image_path(post_image.id) do %>
          <span class="mask"><%= attachment_image_tag post_image, :image,:fill, 280,280, class: "rounded pt-2 hover" %></span>
        <% end %>
      </div>
      <div id="post_image_<%= post_image.id %>">
        <%= render "public/favorites/favorite", post_image: post_image %>
      </div>
    </div>
    <% end %>
  </div>
</div>