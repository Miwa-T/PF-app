<div class="container">
  <h5>フォロー</h5>
  <div class="row">
    <div class="col">
      <% @users.each do |user| %>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "rounded-circle" %>
              <%= link_to user_path(user) do %>
                <%= user.account_name %>
              <% end %>
              投稿数:<%= user.post_images.count %>
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <%= link_to "フォロー済み", user_relationship_path(user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>