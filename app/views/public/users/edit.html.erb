<!--Mypage編集画面-->
<div class="container">
  <h5>Edit My profile</h5>
  <div class="row">
    <div class="col">
      <%= form_with model: @user, local: true do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td><%= f.label :'名前' %></td>
                <td><%= f.text_field :name, autocomplete: "name" %></td>
              </tr>
              <tr>
                <td><%= f.label :'アカウント名' %></td>
                <td><%= f.text_field :account_name, autocomplete: "account_name" %></td>
              </tr>
              <tr>
                <td><%= f.label :'メールアドレス' %></td>
                <td><%= f.email_field :email, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td><%= f.label :'電話番号' %></td>
                <td><%= f.text_field :number, autocomplete: "number" %></td>
              </tr>
              <tr>
                <td><%= f.label :'プロフィール画像' %></td>
                <td><%= f.attachment_field :profile_image, placeholder: "profile_image" %></td>
              </tr>
              <tr>
                <td><%= f.label :'自己紹介' %></td>
                <td><%= f.text_area :introduction, autocomplete: "introduction" %></td>
              </tr>
              <tr>
                <td></td>
                <!--変更保存後はマイページ、退会するボタン押下後は退会確認画面へ-->
                <td><%= f.submit '変更を保存する', class: "btn btn-info" %>
                    <%= link_to '退会する', users_unsubscribe_path, method: :patch, class: "btn btn-info" %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
    </div>
  </div>
</div>