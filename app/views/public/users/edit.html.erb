<!--Mypage編集画面-->
<div class="container py-5">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header font-weight-bold text-center">Profile edit</div>
          <div class="card-body">
          <%= form_with model: @user, local: true do |f| %>
          <form>
            <div class="form-group row justify-content-center">
              <%= f.label :'名前', class: "col-3" %>
              <%= f.text_field :name, autocomplete: "name", class: "form-control col-4" %>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.label :'アカウント名', class: "col-3" %>
              <%= f.text_field :account_name, autocomplete: "account_name", class: "form-control col-4" %>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.label :'メールアドレス', class: "col-3" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control col-4" %>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.label :'電話番号', class: "col-3" %>
              <%= f.text_field :number, autocomplete: "number", class: "form-control col-4" %>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.label :'プロフィール画像', class: "col-3" %>
              <%= f.attachment_field :profile_image, class: "col-4" %>
            </div>
            <div class="form-group row justify-content-center">
              <%= f.label :'自己紹介', class: "col-3" %>
              <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control col-4" %>
            </div>
            <!--変更保存後はマイページ、退会するボタン押下後は退会確認画面へ-->
            <div class="action row justify-content-center">
            <%= f.submit '変更を保存する', class: "btn btn-info col-2" %>
            <%= link_to '退会する', user_unsubscribe_path(@user), class: "btn btn-info mx-5 col-2" %>
            </div>
          </form>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>