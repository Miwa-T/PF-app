<!--Mypage-->
<div class="container">
  <div class="row">
    <div class="col-6">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "rounded-circle" %>
      <%= @user.account_name %>
      投稿数:<%= @user.post_images.count %>
      <%#=フォロワー数 %>
      <%#=フォロー数 %>
      <%= @user.introduction %>
    </div>
    <div class="col-6">
      <%#= フォロー/フォロー外すボタン %>
      <% if @user == current_user %>
      <%= link_to "", edit_user_path(@user), class: "fas fa-user-cog fa-2x" %>
      <%= link_to "", new_post_image_path, class: "fas fa-edit fa-2x" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col">
        <% @post_images.each do |post_image| %>
          <div>
            <%= link_to post_image_path(post_image.id) do %>
              <%= attachment_image_tag post_image, :image, :fill, 200,200, class: "rounded" %>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>