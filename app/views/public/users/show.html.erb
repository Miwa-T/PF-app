<!--Mypage-->
<div class="container">
  <h5>Mypage</h5>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "rounded-circle" %>
      <%= @user.account_name %>
      投稿数:<%= @user.post_images.count %>
      <%= link_to follows_user_path(@user.id) do %>
        フォロー数:<%= @user.followings.count %>
      <% end %>
      <%= link_to followers_user_path(@user.id) do %>
        フォロワー数:<%= @user.followers.count %>
      <% end %>
      </p>
      <%= @user.introduction %>

      <div id="followbtn_<%= @user.id %>">
        <%= render "public/users/followbtn", user: @user, follow: @follow %>
      </div>

      <% if @user == current_user %>
      <%= link_to "", edit_user_path(@user), class: "fas fa-user-cog fa-2x" %>
      <%= link_to "", new_post_image_path, class: "fas fa-edit fa-2x" %>
      <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col">
        <% @post_images.each do |post_image| %>
          <div>
            <%= link_to post_image_path(post_image.id) do %>
              <%= attachment_image_tag post_image, :image, :fill, 200,200, class: "rounded" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>