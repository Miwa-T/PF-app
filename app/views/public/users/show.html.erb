<!--Mypage-->
<div class="container py-5">
  <h5>Mypage</h5>
    <div class="row pt-3">
      <div class="col-2">
        <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, class: "rounded-circle" %>
      </div>
      <div class="col-10">
        <div class="row">
          <div class="col-4 font-weight-bold">
            <font size="5"><%= @user.account_name %></font>
          </div>
          <% if @user == current_user %>
          <div class="col-8">
            <%= link_to edit_user_path(@user), class: "btn btn-info mx-2" do %>
              プロフィールを編集する<i class="fas fa-user-cog"></i>
            <% end %>
            <%= link_to new_post_image_path, class: "btn btn-info mx-2" do %>
                投稿する<i class="fas fa-edit"></i>
              <% end %>
          </div>
          <% end %>
          <div id="followbtn_<%= @user.id %>">
            <%= render "public/users/followbtn", user: @user, follow: @follow %>
          </div>
        </div>
        <div class="row py-3">
          <div class="col-2">
            投稿数:<%= @user.post_images.count %>
          </div>
          <div class="col-2">
            フォロー数:
            <%= link_to follows_user_path(@user.id) do %>
              <%= @user.followings.count %>
            <% end %>
          </div>
          <div class="col-2">
            フォロワー数:
            <%= link_to followers_user_path(@user.id), id: "followers-count_#{@user.id}" do %>
              <%= @user.followers.count %>
            <% end %>
          </div>
        </div>
        <div class="row py-3">
          <div class="col">
            <%= @user.introduction %>
          </div>
        </div>
      </div>
    </div>
    <div class="row col-10 mx-auto py-4 flex-wrap">
      <% @post_images.each do |post_image| %>
        <div class="col-3 mx-4">
          <%= link_to post_image_path(post_image.id) do %>
            <%= attachment_image_tag post_image, :image, :fill, 200,200, class: "rounded" %>
          <% end %>
          <div id="post_image_<%= post_image.id %>">
            <%= render "public/favorites/favorite", post_image: post_image %>
          </div>
        </div>
      <% end %>
    </div>
    <% if @user == current_user %>
      <div id="calendar"></div>
    <% end %>
</div>