<!--User新規登録画面-->
<div class="container py-5">
  <div class="row mx-auto">
     <div class="col">
        <div class="card">
          <div class="card-header font-weight-bold text-center title">Sign up</div>
            <div class="card-body">
              <%= form_with model: @user,url: user_registration_path, id:'new_user', class: 'new_user', local: true do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
                <div class="form-group row justify-content-center pt-4">
                  <div class="col-3">
                    <%= f.label :'名前' %>
                  </div>
                  <div class="col-4">
                    <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'アカウント名' %>
                  </div>
                  <div class="col-4">
                    <%= f.text_field :account_name, autocomplete: "account_name", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'メールアドレス' %>
                  </div>
                  <div class="col-4">
                    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'電話番号' %>
                  </div>
                  <div class="col-4">
                    <%= f.text_field :number, autocomplete: "number", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'プロフィール画像' %>
                  </div>
                  <div class="col-4">
                    <%= f.attachment_field :profile_image %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'自己紹介' %>
                  </div>
                  <div class="col-4">
                    <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'パスワード(6文字以上)' %>
                  </div>
                  <div class="col-4">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group row justify-content-center">
                  <div class="col-3">
                    <%= f.label :'パスワード(確認用)' %>
                  </div>
                  <div class="col-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                  </div>
                </div>
                <!--新規登録後はマイページへ-->
                <div class="action row justify-content-center">
                <%= f.submit '新規登録する', class: "btn btn-info col-2" %>
                </div>
              <% end %>
             <div class="text-center py-3">すでにアカウント登録されている方は<%= link_to "こちら", new_user_session_path %>からログインしてください</div>
            </div>
        </div>
      </div>
  </div>
</div>