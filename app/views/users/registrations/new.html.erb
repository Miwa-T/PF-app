<!--User新規登録画面-->
<div class="container py-5">
  <div class="row mx-auto">
     <div class="col">
       <div class="row justify-content-center">
         <div class="col-6 form-area px-5">
          <h4 class="text-center title mt-5">Sign up</h4>
            <%= form_with model: @user,url: user_registration_path, id:'new_user', class: 'new_user', local: true do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
              <div class="field my-3">
                <%= f.label :'アカウント名' %><span class="badge badge-danger">必須</span>
                <%= f.text_field :account_name, autocomplete: "account_name", class: "form-control" %>
              </div>
              <div class="field mb-3">
                <%= f.label :'メールアドレス' %><span class="badge badge-danger">必須</span>
                <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="field mb-3">
                <%= f.label :'プロフィール画像' %></br>
                <%= f.attachment_field :profile_image %>
              </div>
              <div class="field mb-3">
                <%= f.label :'自己紹介' %>
                <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control" %>
              </div>
              <div class="field mb-3">
                <%= f.label :'パスワード(6文字以上)' %><span class="badge badge-danger">必須</span>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="field mb-3">
                <%= f.label :'パスワード(確認用)' %><span class="badge badge-danger">必須</span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
              <!--新規登録後はマイページへ-->
              <div class="action my-5">
              <%= f.submit '新規登録', class: "btn btn-outline-dark form-control" %>
              </div>
            <% end %>
          <div class="already text-center mb-5">
            すでに登録されている方は</br>
            <%= link_to "こちら", new_user_session_path %>からログインしてください</div>
          </div>
        </div>
      </div>
  </div>
</div>