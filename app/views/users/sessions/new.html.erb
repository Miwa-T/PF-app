<!--Userログイン画面-->
<div class="container py-5">
  <div class="text-center py-4">ログイン</div>
    <div>
      <%= form_with model: @user,url: user_session_path, local: true do |f| %>
        <form>
          <div class="form-group row justify-content-center">
            <%= f.label :'メールアドレス', class: "col-3" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control col-4" %>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.label :'パスワード', class: "col-3" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-4" %>
          </div>
          <!--ログイン後はマイページへ-->
          <div class="action row justify-content-center">
            <%= f.submit "ログインする",class: "btn btn-info col-2" %>
          </div>
        </form>
      <% end %>
        <div class="text-center py-3">
          <%= link_to "アカウントを新規登録する", new_user_registration_path %>
        </div>
    </div>
</div>
