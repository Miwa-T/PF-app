<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#008db7;">
    <div class="container">
      <span class="py-3">
        <%= link_to root_path do %>
          <%= image_tag('img/logo2.png', class: 'logo') %>
        <% end %>
      </span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li><%= link_to "User index", admin_users_path, class: 'nav-link text-light' %></li>
            <li><%= link_to "Log out", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %></li>
          <% elsif user_signed_in? %>
            <li><%= link_to "Mypage", user_path(current_user.id), class: 'nav-link text-light' %></li>
            <li><%= link_to "Index", post_images_path, class: 'nav-link text-light' %></li>
            <li><%= link_to "Ranking", post_image_ranking_path,class: 'nav-link text-light' %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %></li>
          <% else %>
            <li><%= link_to "Top", root_path, class: 'nav-link text-light' %></li>
            <li><%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %></li>
            <li><%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
