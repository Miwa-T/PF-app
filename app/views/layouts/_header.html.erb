<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#008db7;">
    <div class="container">
      <span class="py-3">
        <%= link_to root_path do %>
          <%= image_tag('img/logo2.png', class: 'logo') %>
        <% end %>
      </span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li><%= link_to "会員一覧", admin_users_path, class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light font-weight-bold' %></li>
          <% elsif user_signed_in? %>
            <li><%= link_to "マイページ", user_path(current_user.id), class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "投稿一覧", post_images_path, class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "ランキング", post_image_ranking_path,class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-light font-weight-bold' %></li>
          <% else %>
            <li><%= link_to "Top", root_path, class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light font-weight-bold' %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light font-weight-bold' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
