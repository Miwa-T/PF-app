<div class="container">
  <%= @user.account_name %>さんの会員詳細
  <%= link_to "編集する",edit_admin_user_path(@user) %>
  <div class="row">
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>アカウント名</td>
            <td><%= @user.account_name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @user.number %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <td>ユーザーステータス</td>
            <td>
              <%= user.is_deleted %>
                <% if user == "Available" %>退会
                <% else %>有効
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>