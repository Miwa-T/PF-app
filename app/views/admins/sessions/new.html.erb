<!--管理者ログイン画面-->
<div class="container py-5">
  <div class="text-center py-4">管理者ログイン</div>
    <div>
      <%= form_with model: @admin,url: admin_session_path, local: true do |f| %>
        <form>
          <div class="form-group row justify-content-center">
            <%= f.label :'メールアドレス', class: "col-3" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control col-4" %>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.label :'パスワード', class: "col-3" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-4" %>
          </div>
          <div class="action row justify-content-center py-3">
            <%= f.submit "管理者サイトへログインする",class: "btn btn-info col-3" %>
          </div>
        </form>
      <% end %>
    </div>
</div>