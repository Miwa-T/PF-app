<!--管理者ログイン画面-->
<div class="container py-5">
  <h5 class="text-center">管理者ログイン</h5>
    <div class="row col-8 mx-auto py-3">
      <div class="col">
        <%= form_with model: @admin,url: admin_session_path, local: true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :'メールアドレス' %></td>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :'パスワード' %></td>
              <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログインする",class: "btn btn-info" %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
</div>